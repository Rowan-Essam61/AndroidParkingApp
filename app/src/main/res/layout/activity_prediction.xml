<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".PredictionActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_blue"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Appointment"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="155dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:tag="0"
                android:onClick="getday"
                android:id="@+id/today"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/roundborder"
                android:backgroundTint="@color/yellow"
                android:padding="20dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="20dp" />

            <TextView
                android:tag="1"
                android:onClick="getday"
                android:id="@+id/d1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/roundborder"
                android:backgroundTint="@color/darkgray"
                android:padding="20dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="20dp" />

            <TextView
                android:tag="2"
                android:onClick="getday"
                android:id="@+id/d2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/roundborder"
                android:backgroundTint="@color/darkgray"
                android:padding="20dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="20dp" />

            <TextView
                android:tag="3"
                android:onClick="getday"
                android:id="@+id/d3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/roundborder"
                android:backgroundTint="@color/darkgray"
                android:padding="20dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="20dp" />

            <TextView
                android:tag="4"
                android:onClick="getday"
                android:id="@+id/d4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/roundborder"
                android:backgroundTint="@color/darkgray"
                android:padding="20dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="20dp" />

            <TextView
                android:tag="5"
                android:onClick="getday"
                android:id="@+id/d5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/roundborder"
                android:backgroundTint="@color/darkgray"
                android:padding="20dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="20dp" />

            <TextView
                android:tag="6"
                android:onClick="getday"
                android:id="@+id/d6"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/roundborder"
                android:backgroundTint="@color/darkgray"
                android:padding="20dp"
                android:text=""
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="20dp" />

        </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/defaultround"
            android:backgroundTint="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <TextView
                    android:layout_width="202dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:paddingLeft="20dp"
                    android:text="Pick your checkin time:"
                    android:textColor="@color/dark_blue"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/timeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/pink"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="popTimePicker"
                    android:padding="10dp"
                    android:text="Select Time"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp"

                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp">

                <TextView
                    android:id="@+id/checkouttext"
                    android:layout_width="201dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:gravity="left"
                    android:paddingLeft="20dp"
                    android:text="Pick your checkout time:"
                    android:textColor="@color/dark_blue"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/checkoutButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/pink"
                    android:clickable="true"
                    android:gravity="center"
                    android:onClick="popTimePicker2"
                    android:padding="10dp"
                    android:text="Select Time"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

            </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:orientation="vertical"
    >
            <TextView
                android:id="@+id/predicted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="@string/predicted"
                android:textColor="@color/dark_blue"
                android:textSize="25dp" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
</LinearLayout>
            <TextView
                android:id="@+id/book"
                android:clickable="true"
                android:onClick="booking"
                android:textAlignment="center"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:paddingTop="10dp"
                android:text="Book your slot"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/pink"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:background="@drawable/roundborder"/>
        </LinearLayout>


    </LinearLayout>


</ScrollView>