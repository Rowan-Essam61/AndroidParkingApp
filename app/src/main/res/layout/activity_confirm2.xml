<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".Confirm2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_blue"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:background="@drawable/defaultround"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="@string/confirms"
                android:textColor="@color/dark_blue"
                android:textSize="25dp" />

            <!--We are using this image
        view to display our QR code-->
            <ImageView
                android:id="@+id/idIVQrcode"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:contentDescription="qr_code" />
            <TextView
                android:id="@+id/countdown"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/counter"

                android:gravity="center_vertical"
                android:text="00:30:50"
                android:textAlignment="center"
                android:textColor="@color/dark_blue"
                android:textSize="25dp"
                tools:ignore="RtlCompat" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:layout_marginTop="20dp"
                android:text="@string/confirmt"
                android:textColor="@color/dark_blue"
                android:textSize="25dp" />


            <TextView
                android:id="@+id/view"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/roundborder"
                android:backgroundTint="@color/pink"
                android:clickable="true"
android:onClick="viewreg"
                android:paddingTop="10dp"
                android:text="View Registration"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="RtlCompat" />
            <TextView
                android:id="@+id/home"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:background="@drawable/roundborder"
                android:backgroundTint="@color/pink"
                android:clickable="true"
android:onClick="gohome"
                android:paddingTop="10dp"
                android:text="Go to Home page"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="RtlCompat" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>