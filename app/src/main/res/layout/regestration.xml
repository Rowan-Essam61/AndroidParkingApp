<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:id="@+id/headertop"
    android:layout_marginBottom="100dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="50dp"
    android:background="@drawable/regestration"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_circle_down_24"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_arrow_circle_up_24"
            android:visibility="gone" />

        <TextView

            android:id="@+id/name"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:text="Carefour"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="20dp"
            tools:ignore="RtlCompat" />



        <TextView
android:tag="over"
            android:id="@+id/status1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
          android:background="@drawable/ic_baseline_color_lens_24"
            android:layout_marginRight="20dp"
            android:textAlignment="center"
            android:textColor="@color/dark_blue"
            android:textSize="15dp"
            tools:ignore="RtlCompat" />



    </LinearLayout>
    <ImageView

        android:id="@+id/overlay"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_height="300dp"
        android:src="@drawable/ic_baseline_arrow_circle_up_24"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/dark_blue" />



    <TableLayout
        android:id="@+id/tabledata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/babyblue"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:visibility="gone">

        <TableRow android:paddingLeft="20dp">

            <TextView
                android:padding="10dip"
                android:text="Date"
                android:textColor="@color/dark_blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/date"
                android:padding="10dip"
                android:text="20/2/2020" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/white" />

        <TableRow android:paddingLeft="20dp">

            <TextView
                android:padding="10dip"
                android:text="Slot"
                android:textColor="@color/dark_blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/slot"
                android:padding="10dip"
                android:text="" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/white" />

        <TableRow android:paddingLeft="20dp">

            <TextView
                android:padding="10dip"
                android:text="Status"
                android:textColor="@color/dark_blue"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/status"
                android:padding="10dip"
                android:text="" />
        </TableRow>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/white" />

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@color/dark_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="CheckIn"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@color/dark_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="CheckOut"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TextView
                android:id="@+id/checkin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@color/dark_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/checkout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:layout_weight="1"
                android:background="@color/dark_blue"
                android:gravity="center"
                android:padding="10dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />

        </TableRow>


    </TableLayout>


</LinearLayout>
