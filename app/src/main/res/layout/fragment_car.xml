<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarFragment">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/success"
        app:lottie_autoPlay="true"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        app:lottie_loop="true"/>

    <LinearLayout
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/defaultround"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/profile"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_directions_car_24"
            tools:ignore="MissingConstraints" />


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:padding="10dp"
            android:shrinkColumns="*"
            android:stretchColumns="1">

            <TableRow>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/car" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="10dip"
                        android:text="Car Number:"
                        android:textColor="@color/pink"
                        android:textSize="20dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/carnum"
                    android:background="#00000000"
                    android:padding="10dip"
                    android:text="" />
            </TableRow>

            <View
                android:layout_width="10dp"
                android:layout_height="3dp"
                android:background="@color/dark_blue" />

            <TableRow>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_baseline_nid_card_24" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:padding="10dip"
                        android:text="Category: "
                        android:textColor="@color/pink"
                        android:textSize="20dp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/category"
                    android:background="#00000000"
                    android:padding="10dip"
                    android:text="" />
            </TableRow>

            <View
                android:layout_width="10dp"
                android:layout_height="3dp"
                android:background="@color/dark_blue" />

            <TableRow>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_emoji_type_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="10dip"
                    android:text="Type: "
                    android:textColor="@color/pink"
                    android:textSize="20dp" />
                </LinearLayout>
                <EditText
                    android:id="@+id/type"
                    android:background="#00000000"
                    android:padding="10dip"
                    android:text="" />
            </TableRow>

            <View
                android:layout_width="10dp"
                android:layout_height="3dp"
                android:background="@color/dark_blue" />

            <TableRow>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_baseline_color_lens_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:padding="10dip"
                    android:text="Color: "
                    android:textColor="@color/pink"
                    android:textSize="20dp" />
                </LinearLayout>
                <EditText

                    android:id="@+id/color"
                    android:background="#00000000"
                    android:padding="10dip"
                    android:text="" />

            </TableRow>

            <View
                android:layout_width="10dp"
                android:layout_height="3dp"
                android:background="@color/dark_blue" />
        </TableLayout>


        <TextView
            android:id="@+id/update"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/category"
            android:clickable="true"
            android:backgroundTint="@color/pink"
            android:gravity="center_vertical"
            android:padding="20dp"
            android:paddingTop="10dp"
            android:text="Update"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            tools:ignore="RtlCompat" />

    </LinearLayout>


</FrameLayout>